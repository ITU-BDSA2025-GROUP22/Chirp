@page "/"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>
    
    @if (User.Identity?.IsAuthenticated == true){
        <div class="cheepbox">
            <h3>What's on your mind @(User.Identity.Name)?</h3>
            <form method="post">
                <input style="float: left" type="text" asp-for="CheepText">
                <input type="submit" value="Share" >
                <input name="__RequestVerificationToken" type="hidden">
            </form >
        </div>
    }
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        
                        @if (Model.Following.Contains(cheep.Author))
                        {
                            <span style="color: #666; font-size: 0.9em; font-style: italic; margin-right: 5px;">
                                • Following
                            </span>
                        }

                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                    <div class="cheep-actions">
                        <form method="post" asp-page-handler="Like" style="display: inline;">
                            <input type="hidden" name="cheepId" value="@cheep.CheepId" />
                            <button type="submit">
                                👍 @cheep.LikeCount
                            </button>
                        </form>
                        
                        <!-- ✅ DISLIKE BUTTON -->
                        <form method="post" style="display: inline;">
                            <input type="hidden" name="cheepId" value="@cheep.CheepId" />
                            <button type="submit" 
                                    asp-page-handler="Dislike">
                                👎 @cheep.DislikeCount
                            </button>
                        </form>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }

    <div class="pagenavigation">
        @if (Model.CurrentPage > 1)
        {
            <a href="/?pageNumber=@(Model.CurrentPage - 1)">Previous</a>
        }
        @if (Model.HasNextPage)
        {
            <a href="/?pageNumber=@(Model.CurrentPage + 1)">Next</a>
        }
    </div>
</div>

<style>
    .pagenavigation {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin: 20px 0;
    }

    .pagenavigation a {
        padding: 8px 16px;
        text-decoration: none;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        color: #333;
        border-radius: 4px;
    }

    .pagenavigation a:hover {
        background-color: #e0e0e0;
    }
</style>