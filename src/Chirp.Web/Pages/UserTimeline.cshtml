@page "/{author}"
@using Chirp.Core
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

<div>
    <h2> @routeName's Timeline </h2>

    @if (User.Identity?.IsAuthenticated == true && User.Identity.Name != routeName?.ToString())
    {
        <div style="margin-bottom: 20px;">
            @if (Model.IsFollowing)
            {
                <form method="post" asp-page-handler="Unfollow" asp-route-author="@routeName.ToString()">
                    <button type="submit" class="btn btn-danger">Unfollow</button>
                </form>
            }
            else
            {
                <form method="post" asp-page-handler="Follow" asp-route-author="@routeName.ToString()">
                    <button type="submit" class="btn btn-primary">Follow</button>
                </form>
            }
        </div>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>

                        @if (Model.Following.Contains(cheep.Author))
                        {
                            <span style="color: #666; font-size: 0.9em; font-style: italic; margin-right: 5px;">
                                • Following
                            </span>
                        }

                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>